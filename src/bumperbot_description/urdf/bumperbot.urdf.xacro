    <link name="can_link">
        <visual>
            <origin xyz="-0.032 0.032 0.0" rpy="${pi/2} 0.0 0.0" />

            <geometry>
                <mesh filename="package://bumperbot_description/meshes/can.STL" />
            </geometry>
            <material name="RED" /> 
        </visual>
    </link>

    <joint name="can_joint" type="fixed">
        <parent link="base_link" />
        <child link="can_link" />
        <origin xyz="0.0 0.0 0.078" rpy="0.0 0.0 0.0" />

    </joint>

    -->

</robot>